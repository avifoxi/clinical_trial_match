<div id="breadcrumbs">
    <%= link_to raw('&laquo; Back to Search'), session[:search_results] %>

    <div class="alignright">
        <%= link_to raw('Previous Trial'), trial_path(@previous_trial) %>     |    <%= link_to raw('Next Trial'), trial_path(@next_trial) %> 
    </div>
</div>



<div id="td_contents">        
        <h2 class="colorOrange"><%= @trial.title %></h2>
        <h3 class="briefAbstract"><%= @trial.official_title %></h3>
        <div class="greyBackground mt20">
            <h4 class="detailDesc">
                Study Purpose:</h4>
            <p><%= @trial.description %></p>
            <h4 class="detailDesc">
                Recruitment Information:</h4>
            <table class="studyDetailsTable" border="0" cellpadding="0" cellspacing="0">
                <tbody>
                    <tr>
                        <td class="bold" style="width: 140px;">
                            Accepts Controls:
                        </td>
                        <td>
                            <%= @trial.healthy_volunteers %>
                        </td>
                        <td class="bold" style="width: 140px;">
                            Study Type:
                        </td>
                        <td>
                            <%= @trial.study_type %>
                        </td>
                    </tr>
                    <tr>
                        <td class="bold">
                            Eligible Ages:
                        </td>
                        <td>
                            <%= @trial.minimum_age %> - <%= @trial.maximum_age %>
                        </td>
                        <td class="bold">
                            Phase:
                        </td>
                        <td>
                            <%= @trial.phase %>
                        </td>
                    </tr>
                    <tr>
                        <td class="bold">
                            Study Focus:
                        </td>
                        <td colspan="3">
                            <%= @trial.focus %>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="expandableTrialDetails" id="expandFullLink">
                More Details<span class="expandIcon">▼</span>
        </div>
        <div class="td_purpose whitesmokeBorder" id="expandFullDescription" style="display: none;">
            <p><%= raw(@trial.output_description) %></p>
            <div id="studyDetailsContainer">
                <table class="studyDetailsTable" border="0" cellpadding="0" cellspacing="0">
                    <tbody>
                        <tr>
                            <td class="bold">
                                Status:
                            </td>
                            <td>
                                <%= @trial.overall_status %>
                            </td>
                            <td class="bold">
                                Lead Sponsor:
                            </td>
                            <td>
                                <%= @trial.sponsor %>
                            </td>
                        </tr>
                        <tr>
                            <td class="bold">
                                Trial ID:
                            </td>
                            <td>
                                <%= @trial.nct_id %>
                            </td>
                            <td class="bold">
                                Sponsor Type:
                            </td>
                            <td>
                                NIH
                            </td>
                        </tr>
                        <tr>
                            <td class="bold">
                                Country:
                            </td>
                            <td>
                                <%= @trial.location_countries %>
                            </td>
                            <td class="bold">
                                Collaborators:
                            </td>
                            <td>
                                
                            </td>
                        </tr>
                        <tr>
                            <td class="bold">
                                Study Website:
                            </td>
                            <td>
                                <a id="body_LinkURL" href="<%= @trial.link_url %>" target="_blank"><%= @trial.link_description %></a>
                            </td>
                            <td class="bold">
                            </td>
                            <td>
                            </td>
                        </tr>
                        
                    </tbody>
                </table>
            </div>
        </div>
        <div class="expandableTrialDetails" id="expandExclusion">
                More Inclusion &amp; Exclusion Criteria<span class="expandIcon">▼</span>
        </div>
        <div class="td_purpose whitesmokeBorder" id="exclusionCriteria" style="display: none;">
            <div class="mt10 mb10" ><%= raw(@trial.output_criteria) %>
            </div>
            
            </div>
        <div class="clear" style="margin-bottom:3em;">
        </div>
        <div id="contactDetails">
            <div id="contactDetailsContainer">
            <div>
                <h2 class="colorOrange">
                    Contact a Trial Team</h2>
                <p class="briefAbstract">
                    If you are interested in learning more about this trial, find the trial site nearest  to your location and contact the site coordinator via email or phone.</p>
            </div>

                <% @sites.each do |site| %>
                    <table class="siteLocationTable">
                        <tr>
                            <th class="first"><span></span>
                            <%= "#{site.city}, #{site.state}"%>
                            <% unless session[:coordinates].blank? %>
                                <%=" - (#{site.distance_from(session[:coordinates]).round()} miles away)" %>
                            <% end %>
                            </th>
                        <th>
                            Status:
                            <%=  "#{site.status}" %></th>
                        <tr>
                            <td class="locationDetails">
                                            <%= "#{site.facility}" %>
                                            <br>
                                            <%= "#{site.city}, #{site.state}, #{site.zip_code}" %>
                            </td>
                            <td class="locationDetails">                                        
                                            <%=  "#{site.contact_name}" %>
                                            <br>
                                            <% unless site.contact_phone_email.blank? %>
                                                <a href="mailto:<%=  "#{site.contact_phone_email}" %>">
                                                    <%=  "#{site.contact_phone_email}" %></a>
                                                <br>
                                            <% end %>
                                            <%=  "#{site.contact_phone} #{site.contact_phone_ext}" %>
                            </td>
                    </table>
                <% end %>                
            </div>
        </div>
        <div class="clear">
        </div>
    <div class="form-row">
        <div class="alignleft">
        <%= link_to raw('&laquo; Back to Search'), :back %>    
        </div>        
        <div class="alignright">
        View More Trial Info at 
        <%= link_to (image_tag "logo-clinicaltrials.gif",:height => 30), "http://clinicaltrials.gov/ct2/show/#{@trial.nct_id}",:target => "_blank" %>
        </div>
    </div>
   
    </div>

    <br>
